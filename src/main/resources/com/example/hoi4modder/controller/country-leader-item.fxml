<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainBox" prefHeight="280.0" prefWidth="189.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hoi4modder.controller.CountryLeaderRoleController">
   <children>
      <Label text="Country leader">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Pane prefHeight="12.0" prefWidth="167.0" />
      <HBox prefHeight="30.0" prefWidth="167.0">
         <children>
            <Label prefHeight="18.0" prefWidth="59.0" text="Ideology:" />
            <ComboBox fx:id="ideologyBox" onAction="#updateIdeologyType" prefWidth="150.0" />
         </children>
      </HBox>
      <HBox prefHeight="30.0" prefWidth="167.0">
         <children>
            <Label prefHeight="18.0" prefWidth="59.0" text="Type:" />
            <ComboBox fx:id="typeBox" prefWidth="150.0" />
         </children>
      </HBox>
      <VBox>
         <children>
            <Label text="Traits:" />
            <ListView fx:id="traitList" prefHeight="128.0" prefWidth="190.0" />
            <HBox prefHeight="26.0" prefWidth="190.0">
               <children>
                  <Button mnemonicParsing="false" text="X" textFill="RED" />
                  <TextField fx:id="traitName" prefHeight="26.0" prefWidth="140.0" />
                  <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="59.0" text="Add" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
