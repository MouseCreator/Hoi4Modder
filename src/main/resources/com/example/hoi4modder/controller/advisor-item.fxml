<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="262.0" prefWidth="189.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hoi4modder.controller.AdvisorRoleController">
   <children>
      <Label text="Advisor">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Pane prefHeight="12.0" prefWidth="167.0" />
      <HBox prefHeight="30.0" prefWidth="167.0">
         <children>
            <Label prefHeight="18.0" prefWidth="59.0" text="Slot:" />
            <ComboBox fx:id="slotComboBox" prefWidth="150.0" />
         </children>
      </HBox>
      <HBox prefHeight="30.0" prefWidth="167.0">
         <children>
            <Label prefHeight="18.0" prefWidth="59.0" text="Cost:" />
            <TextField fx:id="costField" />
         </children>
      </HBox>
      <ListView fx:id="traitList" prefHeight="128.0" prefWidth="190.0" />
      <HBox prefHeight="35.0" prefWidth="208.0">
         <children>
            <Button mnemonicParsing="false" text="X" textFill="RED" />
            <TextField fx:id="traitField" prefHeight="26.0" prefWidth="126.0" />
            <Button mnemonicParsing="false" onAction="#addTrait" prefHeight="26.0" prefWidth="44.0" text="Add" />
         </children>
      </HBox>
   </children>
</VBox>
